<% provide(:title, 'Servicios') %>
<h1> Servicios </h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="table-responsive">
			<table class="table serv_table">
				<tr>
					<th> Nombre </th> <th> Info </th>
				</tr>
				<% @servicios.each do |servicio| %>
					<tr>
						<td><%= servicio.name %></td>
						<td><%= servicio.info %></td>
						<td><%= button_to "Eliminar", 
								{controller: "admin", 
								action: "eliminar_servicio", 
								id: servicio.id, 
								method: :put},
								{:class => "btn btn-sm"} %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>	
</div>

<h1>Agregar Servicio</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @servicio, 
			url: {controller: "admin", action: "crear_servicio" } do |f| %>
			<%= render 'shared/servicio_error_messages' %>

			<%= f.label :name, "Nombre" %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :info, "Descripcion" %>
			<%= f.text_field :info, class: 'form-control' %>

			<%= f.submit "Agregar Servicio", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>